@model IEnumerable<blogapp.Models.Post>

@{
    ViewData["Title"] = "Posts"; // Optional: Set the title of the page
}
<head>
    <style>
        .card {
    transition: transform 0.2s;
}

.card:hover {
    transform: scale(1.05); /* Slightly enlarge card on hover */
}

.btn {
    margin-top: 10px; /* Add spacing to the button */
}

    </style>
</head>
<h1 class="text-center my-4">Posts</h1>

@if (Model != null && Model.Any())
{
    <div class="container">
        <div class="row">
            @foreach (var post in Model)
            {
                <div class="col-md-4 mb-4"> <!-- Responsive column -->
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">@post.title</h5>
                            <h6 class="card-subtitle mb-2 text-muted">@post.author</h6>
                            <p class="card-text">@post.excerpt</p>
                            <p class="card-text"><small class="text-muted">Published on: @post.publishedAt.ToString("MMMM dd, yyyy")</small></p>
                            <p class="card-text">
                              <small class="text-muted">Tags: 
                             @foreach (var tag in post.tags)
                             {
                                 @tag.name@(tag != post.tags.Last() ? ", " : "")
                             }
                            </small>
                           </p>
                            <a class="btn btn-primary" asp-controller="Post" asp-action="view" asp-route-postId="@post.Id">View</a> 
                        </div>
                        <div class="card-footer text-muted">
                            <p>Created at: @post.createdAt.ToString("MMMM dd, yyyy")</p>
                            <p>Updated at: @post.updatedAt.ToString("MMMM dd, yyyy")</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
}
else
{
    <h2 class="text-center my-4">No posts available</h2>
}
